{
  "Jwt": {
    "Key": "REPLACE_WITH_A_SECURE_RANDOM_KEY_de_32_caracteres",
    "Issuer": "Your-Backend-Name (emisor del token, normalmente el nombre de la API)",
    "Audience": "Your-Frontend-Or-Consumers (cliente que usará el token: frontend, app móvil, etc.)",
    "AccessTokenExpirationMinutes": 5,
    "RefreshTokenExpirationDays": 7
  },
  "ConnectionStrings": {
    "DefaultConnection": "server=localhost;port=3306;database=example_db;user=example_user;password=example_password;SslMode=Required;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
